{
  "name": "@readium/shared",
  "version": "1.2.0",
  "description": "Next generation SDK for publications in Web Apps",
  "author": "readium",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/readium/web.git"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/readium/web/issues"
  },
  "homepage": "https://github.com/readium/web",
  "keywords": [
    "readium"
  ],
  "main": "dist/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/index.js",
  "size-limit": [
    {
      "path": "dist/shared.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/shared.esm.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@types/jest": "^25.2.3",
    "size-limit": "^4.11.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^3.9.9"
  }
}
