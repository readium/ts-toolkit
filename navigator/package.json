{
  "name": "@readium/navigator",
  "version": "1.2.0",
  "description": "Next generation SDK for publications in Web Apps",
  "author": "readium",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/readium/web.git"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/readium/web/issues"
  },
  "homepage": "https://github.com/readium/web",
  "keywords": [
    "readium",
    "web",
    "epub"
  ],
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --target=es6 --outfile=dist/index.js"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/index.js",
  "size-limit": [
    {
      "path": "dist/shared.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/shared.esm.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/esbuild": "^7.0.8",
    "@size-limit/file": "^7.0.8",
    "@size-limit/webpack": "^7.0.8",
    "@size-limit/webpack-why": "^7.0.8",
    "@types/jest": "^27.4.1",
    "esbuild": "^0.14.53",
    "path-browserify": "^1.0.1",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  }
}
